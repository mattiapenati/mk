#!/bin/bash

pkgname=cmake
pkgver=3.3.2
archive=$pkgname-$pkgver.tar.gz
sum=85f4debf7406bb2a436a302bfd51ada2b4e43719

dstdir=$mkToolchainBase

build() {
  download http://www.cmake.org/files/v${pkgver%.*}/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --prefix="$dstdir" --parallel=$pkgJobs \
                --mandir=/share/man --docdir=/share/doc/cmake \
                --system-curl --system-expat --no-system-jsoncpp \
                --system-zlib --system-bzip2 --system-libarchive --no-qt-gui \
                --sphinx-man
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
  rm -rf "$dstdir"/share/doc
  rm -f "$dstdir"/share/man/man1/cmake-gui.1
  strip "$dstdir"/bin/{ccmake,cmake,cpack,ctest}
  compress_doc "$dstdir"/share/man/man1/{ccmake,cmake,cpack,ctest}.1
  compress_doc "$dstdir"/share/man/man7/cmake-*.7
}
