#!/bin/bash

pkgname=pax-utils
pkgver=1.0.5
archive=$pkgname-$pkgver.tar.xz
sum=e3de243098c510570541f90012f753e8bd2a6886

dstdir=$mkToolchainBase

build() {
  download http://dev.gentoo.org/~vapier/dist/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-silent-rules \
                --with-python
    message "Compiling $pkgname"
    make
  popd
}

package() {
  pip install --install-option="--prefix=$dstdir" pyelftools
  make -C $pkgname-$pkgver install
  sed -i "1s:/usr/bin/python:$mkToolchainBase/bin/python:" \
    "$dstdir"/bin/lddtree
}
