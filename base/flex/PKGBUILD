#!/bin/bash

pkgname=flex
pkgver=2.6.0
archive=v$pkgver.tar.gz
sum=a5884fbbc09c0e2b9241fe84e5ca93e7392b3bf1

dstdir=$mkToolchainBase

build() {
  download https://github.com/westes/flex/archive/v$pkgver.tar.gz
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-nls --disable-shared
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install

  # remove unused libraries
  rm -f "$dstdir"/lib/libfl_pic.{a,la}
}
