#!/bin/bash

pkgname=libibverbs
pkgver=1.2.1
archive=$pkgname-${pkgver}.tar.gz
sum=dc6e4a626704432d5dd019074241a8a1a4cc775f

dstdir=$mkToolchainBase

build() {
  download https://www.openfabrics.org/downloads/verbs/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    PKG_CONFIG_PATH=$mkToolchainBase/lib/pkgconfig \
    ./configure --build=$TARGET --prefix="$dstdir" \
                --disable-silent-rules --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
