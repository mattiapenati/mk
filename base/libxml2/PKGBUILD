#!/bin/bash

pkgname=libxml2
pkgver=2.9.3
archive=$pkgname-$pkgver.tar.gz
sum=0301ce933637e0ceda049047dbefd18714f59b6e

dstdir=$mkToolchainBase

build() {
  download ftp://xmlsoft.org/libxml2/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static \
                --with-thread --with-icu --with-history --without-python
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
  pushd $pkgname-$pkgver/python
    python setup.py install --prefix="$dstdir"
  popd
}
