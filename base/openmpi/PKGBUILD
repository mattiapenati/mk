#!/bin/bash

pkgname=openmpi
pkgver=1.10.2
archive=$pkgname-$pkgver.tar.bz2
sum=03934fc0a2dd0d0d2d0459d714a976eabca938fb
dstdir=$mkToolchainBase

build() {
  download http://www.open-mpi.org/software/ompi/v${pkgver%.*}/downloads/$archive
  check $archive $sum
  extract $archive

  [[ -x "$mkToolchainBase"/bin/valgrind ]] && \
    VALGRIND="--with-valgrind --enable-memchecker"

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    LIBS=-ldl \
    ./configure --build=$TARGET --prefix="$dstdir" --disable-silent-rules \
                --enable-mpi-fortran=all --with-threads=posix --enable-ipv6 \
                --enable-smp-locks --enable-pretty-print-stacktrace \
                --without-x --with-hwloc="$mkToolchainBase" \
                --with-libltdl="$mkToolchainBase" $VALGRIND
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
