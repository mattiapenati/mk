#!/bin/bash

pkgname=mpc
pkgver=1.0.3
archive=$pkgname-$pkgver.tar.gz
sum=b8be66396c726fdc36ebb0f692ed8a8cca3bcc66

dstdir=$mkToolchainBase

build() {
  download http://ftpmirror.gnu.org/$pkgname/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
  strip "$dstdir"/lib/libmpc.so.?.?.?
  reset_rpath "$dstdir"/lib/libmpc.so.?.?.?
  compress_doc "$dstdir"/share/info/mpc.info
  update_linker_cache
}
