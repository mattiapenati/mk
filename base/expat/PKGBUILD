#!/bin/bash

pkgname=expat
pkgver=2.1.0
archive=$pkgname-$pkgver.tar.gz
sum=dd7dab7a5fea97d2a6a43f511449b7cd
dstdir=$mkToolchainBase

build() {
  download http://prdownloads.sourceforge.net/$pkgname/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
  strip "$dstdir"/bin/xmlwf; reset_rpath "$dstdir"/bin/xmlwf
  strip "$dstdir"/lib/libexpat.so.?.?.?
  compress_doc "$dstdir"/share/man/man1/xmlwf.1
  update_linker_cache
}
