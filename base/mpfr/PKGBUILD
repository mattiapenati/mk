#!/bin/bash

pkgname=mpfr
pkgver=3.1.3
archive=$pkgname-$pkgver.tar.gz
sum=b48bec6fcc9c0458e38150778f2be85d1665aadc

dstdir=$mkToolchainBase

build() {
  download http://www.mpfr.org/$pkgname-$pkgver/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --enable-thread-safe \
                --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
  rm -rf "$dstdir"/share/doc
  strip "$dstdir"/lib/libmpfr.so.?.?.?
  reset_rpath "$dstdir"/lib/libmpfr.so.?.?.?
  compress_doc "$dstdir"/share/info/mpfr.info
  update_linker_cache
}
